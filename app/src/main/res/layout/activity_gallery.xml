                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                app:auto_cycle="true"
                app:delay="0"
                app:period="2000"
                app:placeholder="@drawable/whitebackground"
                app:error_image="@drawable/whitebackground"
                app:corner_radius="5"/>
